<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>
<%= link_to '新規登録',new_task_path,class: 'btn btn-primary' %>
<br>


<table class="table">
 <thead>
        <tr>
        <th>お名前</th>
        <th>コメント</th>
        <th>投稿</th>
        </tr>
    </thead>
 
  <tbody>
      <% @tasks.each do |task| %>
     <tr>
     <td><%= link_to task.name,task_path(task) %></td>
     <td><%= task.description %></td>
     <td><%= task.post %></td>
     <td><%= link_to '編集',edit_task_path(task) %></td>
     <td><%= link_to '削除', task_path(task),
method: :delete, class:"destroy",data:{confirm: '削除しても大丈夫ですか？'} %></td>
  </tr>
  <% end %>
   </tbody>
 </table>
